{
  "name": "escuelajs-reto-09",
  "version": "1.0.0",
  "description": "Reto 9 Octubre 26: Curso de Backend con Node",
  "main": "index.js",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "dependencies": {
    "@hapi/boom": "^7.4.2",
    "@hapi/joi": "^15.1.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "mongodb": "^3.3.3",
    "sinon": "^7.5.0",
    "supertest": "^4.0.2"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.2",
    "eslint": "^6.0.1",
    "eslint-config-airbnb": "^17.1.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.14.2",
    "husky": "^3.0.0",
    "lint-staged": "^9.2.0",
    "mocha": "^6.1.4",
    "nodemon": "^1.19.1",
    "nyc": "^14.1.1",
    "prettier": "^1.18.2",
    "proxyquire": "^2.1.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "nyc": {
    "all": true,
    "cwd": "./src",
    "include": [
      "routes",
      "services",
      "lib",
      "utils"
    ],
    "nycrc-path": "../.nycrc",
    "reporter-dir": "./coverage",
    "temp-dir": "../.nyc_output"
  },
  "scripts": {
    "dev": "DEBUG=app:* nodemon src/index.js",
    "start": "NODE_ENV=production node src/index.js",
    "test": "mocha 'src/test/*.js' --recursive --exit",
    "cover": "nyc npm run test",
    "report": "nyc report --reporter=html && open ./src/coverage/index.html",
    "format": "prettier --write '{*.js,src/**/*.{js,jsx}}'",
    "lint": "eslint ${PWD}/ --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/platzi/escuelajs-reto-09.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/platzi/escuelajs-reto-09/issues"
  },
  "homepage": "https://github.com/platzi/escuelajs-reto-09#readme"
}
